{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "jsx": "preserve",
    "allowJs": true,
    
    /* 1. Correction pour localStorage (Environnement Navigateur) */
    "lib": ["dom", "dom.iterable", "esnext"],

    /* 2. Correction pour les imports @/ (Alias) */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },

    /* 3. Paramètres recommandés pour Next.js moderne */
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}